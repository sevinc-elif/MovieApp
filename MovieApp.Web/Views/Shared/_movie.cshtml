@model Movie

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Title">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <div>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">Details</a>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.MovieId" >Edit</a>

                    <form asp-controller="Movies" asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="MovieId" value="@Model.MovieId" />
                        <input type="hidden" name="Title" value="@Model.Title" />
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


